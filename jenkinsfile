//Sintáxis de scripting. Es la más moderna. Se indica para cada nodo (agente) que es lo que hay que hacer
node {
    checkout scm //Para hacer el checkout del contenido del proyecto
    stage ('Build') {
        sh 'mvn compile'
    }
    stage ('Test') {
        sh 'mvn test'
    }
    stage ('Deploy') {
         sh 'mvn package'
    }

}
